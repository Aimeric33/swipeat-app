<div class="container">
  <div class="row">
    <div class="col-12 p-0">
      <% if @restaurant.user_id == current_user.id %>
          <div class="cards m-3">
            <div class="card-meal-show p-3 mb-3">
              <%= render "shared/meal", meal: @meal%>
              <div class="btn d-flex ">
                <div class="meal-show-button">
                  <%= link_to edit_restaurant_meal_path(@restaurant, @meal) do %>
                    <button class="btn btn-orange text-dark">Modifier</button>
                  <% end %>
                </div>
                <div class="meal-show-button">
                  <%= link_to restaurant_meal_path(@restaurant, @meal), data: {turbo_method: :delete, turbo_confirm: "Êtes vous sûr?"} do %>
                    <button class="btn btn-orange text-dark">Supprimer</button>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
      <% else %>
        <div class="cards m-3">
          <div class="card-meal-show p-3 mb-3">
            <%= render "shared/meal", meal: @meal%>
            <div class="btn d-flex justify-content-center">
              <div class="meal-show-button">
                <%= link_to meals_path do %>
                  <button class="btn btn-orange text-dark">Retour</button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
